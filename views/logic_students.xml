                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <li>
                                                <field name="name"/>
                                            </li>
                                            <li class="text-muted">
                                                <field name="batch_id"/>
                                            </li>
                                            <li class="text-muted">
                                                <field name="mode_of_study"/>
                                            </li>
                                            <li class="text-muted">
                                                <field name="phone_number"/>
                                            </li>
                                        </strong>
                                    </div>
                                </div>
